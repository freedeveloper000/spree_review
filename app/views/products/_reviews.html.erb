<% content_for :head do %>
  <%= stylesheet_link_tag 'reviews.css' %>
<% end %>
<div id="reviews">
  <%= render :partial => 'rating', :locals => {:product => product, :review => 0} %>
  <% for review in Review.approved.find_all_by_product_id(product.id) %>
    <%= render :partial => 'review', :locals => {:review => review} %>
  <% end %>

  <%= button_to t('write_your_own_review'), {:controller => 'reviews', :action => 'submit', :id => product.id}, :class => "button bg_darkfirst" %>
</div>

