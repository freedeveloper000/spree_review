<% content_for :head do %>
  <%= stylesheet_link_tag 'reviews.css' %>
<% end %>
<% stars = product.get_stars %>
<div class="header">
  Average customer rating:
  <span title="<%=pluralize(stars[0], 'star')%> out of 5">
    <%= render :partial => "reviews/stars#{stars[0]}" %>
  </span> &nbsp;
  (based upon <%= pluralize(stars[1], 'review') %>)
  <br/>
  <br/>
</div>

