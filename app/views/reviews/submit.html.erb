<h1>Product review submission</h1>

<h2>Please leave us a review and a rating for our "<%= @product.name %>"</h2>

<%= stylesheet_link_tag 'reviews.css' %>
<% form_for 'review', :url => {:action => 'create'} do |f| %>
  <%= error_messages_for :review %>
  <%= f.hidden_field :product_id, :value => @product.id %>     

    <table cellspacing="0" cellpadding="2">
	<tbody><tr valign="top">
	    <td class="fieldtitle right nowrap">
		<%= f.label :name, "<strong>Your name</strong>" %>
	    </td>
	    <td width="100%">
		<%= f.text_field :name, :size => 50, :maxlength => 100, :value => '' %>
	    </td>
	</tr>
	<tr valign="top">
	    <td class="fieldtitle right nowrap">
		<%= f.label :location, "<strong>Your location</strong>" %>
	    </td>
	    <td>
		<%= f.text_field :location, :size => 50, :maxlength => 100, :value => '' %>
	    </td>
	</tr>
	<tr valign="top">
	    <td style="padding-top: 5px; padding-bottom: 5px;" class="fieldtitle right nowrap">
		<strong>Rating</strong>
	    </td>
	    <td style="padding-top: 5px; padding-bottom: 5px;">
              <% (1..5).each do |n| %>

		<%= f.radio_button :rating, n %>
		<label for="review_rating_<%= n %>">
                  <span title="<%=pluralize(n, 'star')%> out of 5">
                    <%= render :partial => "reviews/stars#{n}" %>
                  </span>
                </label>
                <br/>

	      <% end %> 
	    </td>
	</tr>
	<tr valign="top">
	    <td class="fieldtitle right nowrap">
		<%= f.label :title, "<strong>Review title</strong>" %>
	    </td>
	    <td>
		<%= f.text_field :title, :maxlength => "255", :size => "50", :value => '' %>
	    </td>
	</tr>
	<tr valign="top">
	    <td class="fieldtitle right nowrap">
		<%= f.label :review, "<strong>Review text</strong>" %>
	    </td>
	    <td>
		<%= f.text_area :review, :wrap => "virtual", :rows => "10", :cols => "50" %>
	    </td>
	</tr>
	<tr>
	    <td> </td>
	    <td style="padding-top: 5px;">
		<%= f.submit "Submit your review", :class => "button bg_darkfirst" %>
	    </td>
	</tr>
    </tbody></table>
<% end %>

<br/>
<h2>The fine print</h2>
<ul>
    <li>All submitted reviews are subject to the licence terms set out in our 
        <%= link_to "terms and conditions", url_for(:action => 'terms') %>.
    </li><li>Approved reviews will be posted within one to two business days.
    </li><li>Submissions that do not follow our 
	<%= link_to "review guidelines", url_for(:action => 'submission-guidelines') %> will not be published.
</li></ul>
